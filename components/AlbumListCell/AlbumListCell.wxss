/* pages/components/AlbumListCell/AlbumListCell.wxss */
.content {
  width: 100%;
  display: flex;
  justify-content: center;
}

.left image {
  margin-left: 4px;
  width: 70px;
  height: 70px;
  border-radius: 5px;
  box-shadow:2px 2px 3px 3px #f2f2f2;
}

.right {
  margin-left: 8px;
  margin-right: 8px;
  height: 74px;
  width: 100%;
  border-bottom: 1px #f3f3f3 solid;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.album-name {
  margin-top: 5px;
  display: block;
  height: 69%;
  overflow: hidden;
  font-size: 16px;
  color: #000;
}

.album-count {
  display: block;
  height: 40%;
  font-size: 13px;
  color: #999;
}
