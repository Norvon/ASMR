/* components/SoundListCell/SoundListCell.wxss */
.sound-cell-content {
  width: 100%;
  display: flex;
  justify-content: center;
}

.left text {
  height: 70px;
  line-height: 70px;
  padding: 20px 14px 10px;
  text-align: center;
  font-size: 20px;
  color: #666;
}

.right {
  margin-left: 8px;
  margin-right: 8px;
  height: 100%;
  line-height: 74px;
  width: 100%;
  border-bottom: 1px #f3f3f3 solid;
}

.sound-name {
  display: block;
  margin-top: 10px;
  line-height: 18px;
  height: 44px;
  overflow: hidden;
  font-size: 16px;
  color: #000;
}

.sound-singer {
  display: block;
  margin-bottom: 0px;
  line-height: 20px;
  height: 20px;
  font-size: 13px;
  color: #999;
  
}