/* components/SoundListCell/SoundListCell.wxss */
.sound-cell-content {
  width: 100%;
  display: flex;
  justify-content: center;
}

.left text {
  height: 70px;
  line-height: 70px;
  padding: 20px 14px 10px;
  text-align: center;
  font-size: 20px;
  color: #666;
}

.right {
  margin-left: 8px;
  margin-right: 8px;
  height: 74px;
  width: 100%;
  border-bottom: 1px #f3f3f3 solid;

  display: flex;
  flex-direction: column;
  justify-content: center;
}

.sound-name {
  display: block;
  height: 69%;
  overflow: hidden;
  font-size: 16px;
  color: #000;
  margin-top: 5px;
}

.sound-singer {
  display: block;
  height: 40%;
  font-size: 13px;
  color: #999;
}