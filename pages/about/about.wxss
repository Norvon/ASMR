page {
  height: 100%;
  background-color: #f4f4f4;
}

.about {
  width: 100%;
  height: 20%;
}

.header {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;

  border-bottom: 1px dashed #fff;
}

.header-icon {
  width: 48px;
  height: 48px;
  border-radius: 50%;
}

.header-text {
  font-size: 16px;
  line-height: 18px;
}

.content {
  position: absolute;
  /* top: 21%; */
  width: 100%;
  height: 80%;
  background-color: #f4f4f4;
}

.explain {
  margin: 20px;
  margin-top:35px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.explain-title {
  color: red;
}

.explain-conten {
  margin: 10px 5%;
  font-size: 14px;
  color: #ccc;
}

.top {
  width: 25px;
  height: 25px;

  position:fixed;
  top: 30px;
  left: 5px;
}

.back-image {
  
  width: 100%;
  height: 100%;
}