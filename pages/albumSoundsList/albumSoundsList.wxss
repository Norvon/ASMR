/* pages/albumSoundsList/albumSoundsList.wxss */
.album-sounds-list-content {
  height: 100%;
}

.top-content {
  display: flex;
  height: 240px;
  margin-bottom: 10px;
}

.top-image {
   width: 100%; 
  padding-left: 5px;
  padding-right: 5px;
}

.back-image {
  position: absolute;
  top: 30px;
  left: 10px;
  width: 25px;
  height: 25px;
}

.top-content text {
  position: absolute;
  top: 30px;
  left: 30%;
  width: 40%;
  text-align: center;
  color: #fff;
  font-weight: bold;
}

.cellList {
  border-radius: 5px;
}

.itemCell {
  height: 80px;
}

.footer {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content:center;
  /* align-items: center; */
  position: fixed;
  bottom: 0;
}

.footer text {
  font-size: 14px;
  color: #666;
}
