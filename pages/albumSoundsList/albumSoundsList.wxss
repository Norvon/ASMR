/* pages/albumSoundsList/albumSoundsList.wxss */
.album-sounds-list-content {
  height: 100%;
}

.topImage {
  display: flex;
  margin-bottom: 10px;
}

.topImage image{
   width: 100%; 
  padding-left: 5px;
  padding-right: 5px;
}

.topImage text {
  position: absolute;
  top: 30px;
  width: 100%;
  text-align: center;
  color: #fff;
  font-weight: bold;
}

.cellList {
  border-radius: 5px;
}

.itemCell {
  height: 80px;
}

.footer {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content:center;
  /* align-items: center; */
  position: fixed;
  bottom: 0;
}

.footer text {
  font-size: 14px;
  color: #666;
}
