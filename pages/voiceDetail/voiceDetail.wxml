<!--pages/voiceDetail/voiceDetail.wxml-->
<view class='voice-dtail-content'>
  <view class='top-content'>
    <image class='top-image' src='{{ topImageUrl }}'></image>
    <text>{{ title }}</text>
    <image class='back-image' src='/source/svgs/back.svg' bindtap='backClick'></image>
  </view>
  <view class='voice-info'>
    <view>
      <text class='voice-name'>{{ voice.voice_name }}</text>
    </view>
    <view>
      <text class='voice-user'>{{ voice.voice_singer }}</text>
    </view>
  </view>
  <view class='voice-player' style='height:{{ voicePlayerHeight }}px'>
    <view class='play-control'>
      <view class='play-control-wrapper'>
        <image class='pre-image' src='/source/svgs/pre.svg' bindtap='previousClick'></image>
        <image class='begin-image'  src='{{isPlayer ? "/source/svgs/begin.svg" : "/source/svgs/pause.svg"}}' bindtap='beginPlayerClick'></image>
        <image class='next-image'  src='/source/svgs/next.svg' bindtap='nextSongClick'></image>
      </view>
    </view>

  </view>
</view>